{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/js",

    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],

    "strict": true,
    "jsx": "react-jsx",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "isolatedModules": true,
    "skipLibCheck": true

    // Advanced options (enable later)
    // "verbatimModuleSyntax": true,
    // "noUncheckedSideEffectImports": true,
    // "moduleDetection": "force",

    // Node-only (enable only for backend)
    // "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
